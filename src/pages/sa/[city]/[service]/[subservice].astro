  </section>

  <!-- Other Subservices -->
  {otherSubservices.length > 0 && (
    <section class="mb-12">
      <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-6">
        خدمات أخرى قد تهمك
      </h2>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {otherSubservices.map((otherSubservice) => (
          <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md hover:shadow-lg transition-shadow p-6">
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-3">
              {otherSubservice.data.title}
            </h3>
            <p class="text-gray-600 dark:text-gray-300 mb-4">
              {otherSubservice.data.description}
            </p>
            <a 
              href={`/sa/${city}/${serviceData.data.slug}/${otherSubservice.data.slug}`}
              class="inline-flex items-center text-primary hover:text-primary/80 font-semibold"
            >
              اعرف المزيد
              <svg class="w-4 h-4 mr-2 rtl:ml-2 rtl:mr-0 rtl:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
        ))}
      </div>
    </section>
  )}

  <!-- FAQ Section -->
  <section class="mb-12">
    <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-6">
      أسئلة شائعة حول {subserviceData.data.title}
    </h2>
    <div class="space-y-4">
      <div class="bg-white dark:bg-gray-800 rounded-lg p-6 shadow-sm">
        <h3 class="font-semibold text-gray-900 dark:text-white mb-2">
          كم تستغرق خدمة {subserviceData.data.title}؟
