---
import { getCollection, render } from 'astro:content';
import { getCityBySlug, getAllCitySlugs } from '~/data/locations';
import ServiceLayout from '~/layouts/ServiceLayout.astro';

export async function getStaticPaths() {
  const services = await getCollection('services');
  const subservices = await getCollection('subservices');
  const cities = getAllCitySlugs();
  
  const paths = [];
  
  // Generate paths for each city-service-subservice combination
  for (const city of cities) {
    for (const service of services) {
      const serviceSubservices = subservices.filter(sub => sub.data.service === service.data.slug);
      
      for (const subservice of serviceSubservices) {
        paths.push({
          params: { 
            city: city, 
            service: service.data.slug,
            subservice: subservice.data.slug
          },
          props: { 
            service: service,
            subservice: subservice,
            city: city
          }
        });
      }
    }
  }
  
  return paths;
}

const { city, service, subservice } = Astro.params;
const { service: serviceData, subservice: subserviceData } = Astro.props;

// Get city information
const cityInfo = getCityBySlug(city);

// Get other subservices for this service
const otherSubservices = await getCollection('subservices', (entry) => {
  return entry.data.service === serviceData.data.slug && entry.data.slug !== subserviceData.data.slug;
});

// Render the subservice content
const { Content } = await render(subserviceData);
---

<ServiceLayout 
  title={subserviceData.data.title}
  description={subserviceData.data.description}
  keywords={subserviceData.data.keywords}
  city={city}
  service={serviceData.data.slug}
